{
  "name": "miniapp-root",
  "private": true,
  "description": "Miniapp is a lightweight framework for QQ/Wechat miniapp.",
  "repository": "github.com:Mister-Hope/miniapp.git",
  "license": "MIT",
  "author": {
    "name": "Mr.Hope",
    "email": "zhangbowang1998@gmail.com",
    "url": "https://mrhope.site"
  },
  "workspaces": [
    "docs/",
    "demo/",
    "packages/*"
  ],
  "scripts": {
    "build": "cross-env mode=production lerna run build --stream",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 2",
    "clean": "lerna run clean --stream",
    "copy": "ts-node scripts/copy-package.ts",
    "dev": "cross-env mode=production lerna run dev --stream",
    "lerna:bootstrap": "lerna bootstrap",
    "lerna:clean": "lerna clean",
    "lerna:release": "ts-node -O {\\\"module\\\":\\\"commonjs\\\"} scripts/release",
    "lint": "prettier --check --write . && eslint . --ext .js,.ts --fix",
    "lint:check": "prettier --check . && eslint . --ext .js,.ts",
    "packages:check-update": "ncu --deep --timeout 600000",
    "packages:update": "ncu -u --deep --timeout 600000 && yarn install && yarn upgrade",
    "postinstall": "husky install",
    "release": "ts-node scripts/release.ts",
    "test": "jest -i"
  },
  "lint-staged": {
    "*.{md,yml,json}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "13.0.0",
    "@commitlint/config-conventional": "13.0.0",
    "@rollup/plugin-commonjs": "19.0.0",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.0.0",
    "@rollup/plugin-typescript": "8.2.1",
    "@types/inquirer": "7.3.2",
    "@types/jest": "26.0.23",
    "@types/node": "15.12.5",
    "@types/semver": "7.3.6",
    "@typescript-eslint/eslint-plugin": "4.28.1",
    "@typescript-eslint/parser": "4.28.1",
    "chalk": "4.1.1",
    "conventional-changelog-cli": "2.1.1",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.29.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "3.4.0",
    "husky": "7.0.0",
    "inquirer": "8.1.1",
    "jest": "27.0.6",
    "lerna": "4.0.0",
    "lint-staged": "11.0.0",
    "npm-check-updates": "11.7.1",
    "ora": "5.4.1",
    "prettier": "2.3.2",
    "rollup": "2.52.6",
    "rollup-plugin-dts": "3.0.2",
    "rollup-plugin-terser": "7.0.2",
    "semver": "7.3.5",
    "sort-package-json": "1.50.0",
    "ts-jest": "27.0.3",
    "ts-node": "10.0.0",
    "typescript": "4.3.5"
  }
}
