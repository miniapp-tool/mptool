{
  "name": "miniapp-root",
  "private": true,
  "description": "Miniapp is a lightweight framework for QQ/Wechat miniapp.",
  "repository": "github.com:Mister-Hope/miniapp.git",
  "license": "MIT",
  "author": {
    "name": "Mr.Hope",
    "email": "zhangbowang1998@gmail.com",
    "url": "https://mrhope.site"
  },
  "workspaces": [
    "docs/",
    "demo/",
    "packages/*"
  ],
  "scripts": {
    "build": "cross-env mode=production lerna run build --stream",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 2",
    "clean": "lerna run clean --stream",
    "copy": "ts-node scripts/copy-package.ts",
    "dev": "cross-env mode=production lerna run dev --stream",
    "docs:build": "yarn workspace docs docs:build",
    "docs:dev": "yarn workspace docs docs:dev",
    "postinstall": "husky install",
    "lerna:bootstrap": "lerna bootstrap",
    "lerna:clean": "lerna clean",
    "lerna:release": "ts-node -O {\\\"module\\\":\\\"commonjs\\\"} scripts/release",
    "lint": "prettier --check --write . && eslint . --ext .js,.ts --fix",
    "lint:check": "prettier --check . && eslint . --ext .js,.ts",
    "packages:check-update": "ncu --deep --timeout 600000",
    "packages:update": "ncu -u --deep --timeout 600000 && yarn install && yarn upgrade",
    "release": "ts-node scripts/release",
    "test": "jest -i && lerna run tsd --stream"
  },
  "lint-staged": {
    "*.{md,yml,json}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "13.2.1",
    "@commitlint/config-conventional": "13.2.0",
    "@rollup/plugin-commonjs": "21.0.0",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.0.5",
    "@rollup/plugin-typescript": "8.2.5",
    "@types/inquirer": "8.1.3",
    "@types/jest": "27.0.2",
    "@types/node": "16.10.3",
    "@types/semver": "7.3.8",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "chalk": "4.1.2",
    "conventional-changelog-cli": "2.1.1",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "7.0.2",
    "inquirer": "8.2.0",
    "jest": "27.2.5",
    "lerna": "4.0.0",
    "lint-staged": "11.2.3",
    "npm-check-updates": "11.8.5",
    "ora": "5.4.1",
    "prettier": "2.4.1",
    "rollup": "2.58.0",
    "rollup-plugin-dts": "4.0.0",
    "rollup-plugin-terser": "7.0.2",
    "semver": "7.3.5",
    "sort-package-json": "1.52.0",
    "ts-jest": "27.0.5",
    "ts-node": "10.2.1",
    "tsd": "0.17.0",
    "typescript": "4.4.4"
  }
}
