{
  "name": "miniapp-root",
  "version": "0.1.5",
  "private": true,
  "description": "Miniapp is a lightweight framework for QQ/Wechat miniapp.",
  "repository": "github.com:miniapp-tool/mptool.git",
  "license": "MIT",
  "author": {
    "name": "Mr.Hope",
    "email": "mister-hope@outlook.com",
    "url": "https://mrhope.site"
  },
  "type": "module",
  "scripts": {
    "build": "cross-env mode=production pnpm --stream -r run build",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 2",
    "clean": "pnpm --stream -r run clean",
    "copy": "tsx scripts/copy-package.ts",
    "dev": "cross-env mode=production pnpm --stream -r run dev",
    "docs:build": "pnpm --dir=docs run docs:build",
    "docs:dev": "pnpm --dir=docs run docs:dev",
    "postinstall": "husky install",
    "lint": "pnpm lint:eslint && pnpm lint:prettier",
    "lint:eslint": "eslint . --ext .js,.ts --fix",
    "lint:prettier": "prettier --check --write .",
    "packages:update": "pnpm dlx npm-check-updates -u --deep",
    "release": "pnpm release:bump && pnpm clean && pnpm build && pnpm release:publish",
    "release:bump": "bumpp -r --execute=\"pnpm commit-and-tag-version && git add CHANGELOG.md\" --commit \"chore(release): publish v%s\" --all --tag --push",
    "release:publish": "cross-env NODE_OPTIONS=\"--experimental-json-modules\" tsx scripts/release/index.ts",
    "test": "vitest run && pnpm -r --stream run tsd"
  },
  "commit-and-tag-version": {
    "skip": {
      "bump": true,
      "commit": true,
      "tag": true
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "nano-staged": {
    "*.{md,yml,json}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "packageManager": "pnpm@7.30.0",
  "devDependencies": {
    "@commitlint/cli": "17.4.4",
    "@commitlint/config-conventional": "17.4.4",
    "@rollup/plugin-commonjs": "24.0.1",
    "@rollup/plugin-json": "6.0.0",
    "@rollup/plugin-node-resolve": "15.0.1",
    "@types/inquirer": "9.0.3",
    "@types/node": "18.14.6",
    "@typescript-eslint/eslint-plugin": "5.54.1",
    "@typescript-eslint/parser": "5.54.1",
    "bumpp": "9.0.0",
    "c8": "7.13.0",
    "commit-and-tag-version": "11.1.0",
    "conventional-changelog-cli": "2.2.2",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "esbuild": "0.17.19",
    "eslint": "8.36.0",
    "eslint-config-prettier": "8.7.0",
    "eslint-plugin-prettier": "4.2.1",
    "execa": "7.0.0",
    "husky": "8.0.3",
    "inquirer": "9.1.4",
    "nano-staged": "0.8.0",
    "miniprogram-api-typings": "3.9.0",
    "ora": "6.1.2",
    "picocolors": "1.0.0",
    "prettier": "2.8.4",
    "rimraf": "4.4.0",
    "rollup": "3.18.0",
    "rollup-plugin-dts": "5.2.0",
    "rollup-plugin-esbuild": "5.0.0",
    "sort-package-json": "2.4.1",
    "tsd": "0.26.1",
    "tsx": "3.12.5",
    "tslib": "2.5.0",
    "typescript": "4.9.5",
    "vite": "4.1.4",
    "vitest": "0.29.3"
  }
}
