{
  "name": "miniapp-root",
  "version": "0.0.1-beta.1",
  "private": true,
  "description": "Miniapp is a lightweight framework for QQ/Wechat miniapp.",
  "repository": "github.com:miniapp-tool/mptool.git",
  "license": "MIT",
  "author": {
    "name": "Mr.Hope",
    "email": "mister-hope@outlook.com",
    "url": "https://mrhope.site"
  },
  "type": "module",
  "scripts": {
    "build": "cross-env mode=production pnpm --stream -r run build",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 2",
    "clean": "pnpm --stream -r run clean",
    "copy": "ts-node scripts/copy-package.ts",
    "dev": "cross-env mode=production pnpm --stream -r run dev",
    "docs:build": "pnpm --dir=docs run docs:build",
    "docs:dev": "pnpm --dir=docs run docs:dev",
    "postinstall": "husky install",
    "lint": "pnpm lint:eslint && pnpm lint:prettier",
    "lint:eslint": "eslint . --ext .js,.ts --fix",
    "lint:prettier": "prettier --check --write .",
    "release": "pnpm release:bump && pnpm clean && pnpm build && pnpm release:publish",
    "release:bump": "bumpp package.json demo/package.json docs/package.json packages/*/package.json --execute=\"pnpm standard-version --skip.bump --skip.commit --skip.tag && git add CHANGELOG.md\" --commit \"chore(release): publish v%s\" --all --tag --push",
    "release:publish": "cross-env NODE_OPTIONS=\"--experimental-json-modules\" ts-node-esm  -O {\\\"module\\\":\\\"ESNext\\\"} scripts/release",
    "test": "vitest run && pnpm -r --stream run tsd"
  },
  "lint-staged": {
    "*.{md,yml,json}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.2",
    "@commitlint/config-conventional": "17.0.2",
    "@rollup/plugin-commonjs": "22.0.0",
    "@rollup/plugin-json": "4.1.0",
    "@rollup/plugin-node-resolve": "13.3.0",
    "@rollup/plugin-typescript": "8.3.2",
    "@types/inquirer": "8.2.1",
    "@types/node": "17.0.36",
    "@typescript-eslint/eslint-plugin": "5.27.0",
    "@typescript-eslint/parser": "5.27.0",
    "bumpp": "7.1.1",
    "c8": "7.11.3",
    "chalk": "5.0.1",
    "conventional-changelog-cli": "2.2.2",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.16.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "execa": "6.1.0",
    "husky": "8.0.1",
    "inquirer": "8.2.4",
    "lint-staged": "13.0.0",
    "miniprogram-api-typings": "3.4.6",
    "npm-check-updates": "13.0.4",
    "ora": "6.1.0",
    "prettier": "2.6.2",
    "rollup": "2.75.5",
    "rollup-plugin-dts": "4.2.2",
    "rollup-plugin-terser": "7.0.2",
    "sort-package-json": "1.57.0",
    "standard-version": "9.5.0",
    "ts-node": "10.8.0",
    "tsd": "0.20.0",
    "tslib": "2.4.0",
    "typescript": "4.7.2",
    "vite": "2.9.12",
    "vitest": "0.13.1"
  }
}
